@model IEnumerable<Soccer.MVC.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-title">@Html.DisplayFor(modelItem => item.Country_ID)<br/>
                        class="card-title">@Html.DisplayFor(modelItem => item.Description)
                    </p>
                    
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-primary">Delete</a>
                </div>
                </div>
        }
    </tbody>
</table>
